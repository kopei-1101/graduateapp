<!DOCTYPE html>
<html>
  <head>
    <title>GraduateApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header_top">

        <% if @current_user %>
          <%= link_to('Graduateapp','/guesthouses/top') %>
        <% else %>  
          <%= link_to('Graduateapp','/') %>
        <% end %>

        <% if @current_user %>
          <%= link_to('募集','/guesthouses/recruit')%>
          <%= link_to(@current_user.name,'/users/edit')%>
          <%= link_to('ログアウト','/users/logout', method: :post) %>
          <%= link_to('ログアウトしたいんです', destroy_user_session_path, method: :delete) %>
        <% else %>
          <%= link_to "ログインしたいよ", new_user_session_path %> <!-- ログイン画面に移行する -->
          <%= link_to('ログイン','/users/again') %>
          <%= link_to('新規登録','/users/new') %>
        <% end %>

      </div>
    </header>

    <%= yield %>
  </body>
</html>
